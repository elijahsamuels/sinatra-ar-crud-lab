<form action="/articles/<%= @article.id %>" method="post">
    <%# this works because of Rack::MethodOverride. it searches for anything with #name="_method" and will change what the method type is. So instead of POST, when the request is recieved it will change to PATCH. %>
  <input type="hidden" name="_method" value="patch"> 
      <label for="title">Title</label>
      <input id="title" type="text" name="article[title]" value="<%= @article.title %>" />
      <label for="content">Content</label>
      <textarea id="content" type="text" name="article[content]"  value="<%= @article.content %>">
      </textarea>
  <input type="submit">
</form>
